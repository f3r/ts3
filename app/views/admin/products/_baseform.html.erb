<%= f.semantic_fields_for :product do |p|%>
	<%= p.inputs "General" do%>
	<%= p.input :published%>
	<%= p.input :user%>
	<%= p.input :city%>
	<%= p.input :title%>
	<%= p.input :description%>
	<%end%>
	
	<%= p.inputs "Location" do%>
	<%= p.input :address_1%>
	<%= p.input :address_2%>
	<%= p.input :zip%>
	<%= p.input :lat%>
	<%= p.input :lon%>
	<%= p.input :radius%>
	<%end%>
	
	<%= p.inputs "Pricing" do%>
	<%= p.input :currency%>
	<%= p.input :price_per_hour%>
	<%= p.input :price_per_hour_usd%>
	<%= p.input :price_per_week%>
	<%= p.input :price_per_week_usd%>
	<%= p.input :price_per_month%>
	<%= p.input :price_per_month_usd%>
	<%= p.input :price_sale%>
	<%= p.input :price_sale_usd%>
	<%end%>
	
	
<% end %>


