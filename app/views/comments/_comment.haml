%div.question-container{:id => "qdiv-#{comment['id']}"}
  %div.left
    .user_box
      .user_photo= placehold(40,40)
      .user_data
        .user_name= link_to "User #{comment['user_id']}", '#'
        .user_role
          User
    %div.p
      - if @owner['id'] == current_user['id'] # || comment['user_id'] == current_user['id']
        = link_to 'X', place_comment_path(comment.merge(:type => 'question')), :remote => true, :method => :delete, :confirm => 'Delete this Question?', :class => "del hide"
      = comment['comment']
      

  - if comment['replies'].blank?
    -if current_user['id'] == @owner['id']
      = render '/comments/form', :place => @place, :comment_id => comment['id']

  -else
    = render '/comments/reply', :reply => comment['replies'].first, :question_id => comment['id']
