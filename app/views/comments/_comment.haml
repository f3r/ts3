.span9.offset1.question-container{:id => "qdiv-#{comment.id}"}
  .row-fluid.question
    .span4
      .user_box
        -if comment.user
          .user_photo= avatar_image(comment.user)
          .user_data
            .user_name= "#{comment.user.anonymized_name}"
            .user_role= comment.user.role
        -else
          =t(:unknown)

    - if current_user?(@owner)
      = link_to 'X', place_comment_path(comment.place_id, comment.id, :type => 'question'), :remote => true, :method => :delete, :confirm => 'Delete this Question?', :class => "del hide"

    .span8
      .user_message= comment.comment
      .time= time_ago_in_words(comment.created_at)

  - # If I'm the owner and the question hasn't been responded yet
  - if comment.answers.blank?
    - if current_user?(@owner)
      = render '/comments/form', :place => @place, :comment_id => comment.id
  -else
    = render '/comments/reply', :reply => comment.reply, :question_id => comment.id
