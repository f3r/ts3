-if logged_in?
  - unless current_user['id'] == @owner['id']
    .row
      .span12{:style => "text-align:center"}
        %a#open-ask-btn.btn.btn-large.btn-primary= t(:ask_question)

  .row
    #ask-form.hide
      .span10.offset1
        = form_for 'comment', :url => place_comments_path(@place), :html => {:id => 'comment-form', :remote => true, :class => "form-inline"} do |f|
          .row
            .span1{:style=>"margin-right: 10px"}= avatar_image(current_user)
            = f.text_area :comment, :rows => 3, :class => "span9", :style => "height:54px; width:689px; max-width:689px !important; min-width:689px !important"
          .row
            .span2.offset1
              = f.check_box "pm"
              .help-inline= t(:pm)
            .span2.offset8
              = button_tag t(:cancel), :id => 'ask-cancel', :class => 'btn'
              = button_tag t(:submit), :id => 'ask-btn',    :class => "btn btn-primary"
-else
  .row
    .span12{:style => "text-align:center"}
      %a.btn.btn-large.btn-primary{:href => login_path_with_ref}= t(:ask_question)

%br
%br
- if !@comments.nil?
  .row  
    %section.item-questions
      - @comments.each do |comment|
        = render '/comments/comment', :comment => comment

:javascript

  PlaceComments.initialize();