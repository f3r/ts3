.span8.offset2
  %h1= t("users.registration.set_password_welcome_title", :user_name => @user.full_name)
  %p= t("users.registration.set_password_welcome_text")
  .credentials-box
    .section
      %h3= t("users.registration.choose_a_password")

      = form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f|
        = f.hidden_field :reset_password_token
        .input
          = f.label :password, t("users.registration.enter_your_new_password")
          = f.password_field :password, :class => "validate[required,custom[onlyLetterNumber]]"
        .input
          = f.label :password, t(:confirm_reset_password)
          = f.password_field :password_confirmation, :class => "validate[required, equals[user_password]]"

        %button.btn.float-right{:type => 'submit'}
          = t("submit")