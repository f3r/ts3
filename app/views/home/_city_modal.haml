#city_modal.modal.fade.hide
  = form_tag feedbacks_path, :class => 'cities_suggest_form form-horizontal' do
    .modal-header
      %h3= t("pages.front_page.city_modal.title")
    .modal-body
      %p= t("pages.front_page.city_modal.description")
      .control-group
        %label{:style => "text-align:right; width:65px; margin-right:20px;", :class => 'control-label'}=t("addresses.city")
        .controls
          = hidden_field_tag :type, :city_suggestion
          = text_field_tag :message
      - unless logged_in?
        .control-group
          %label{:style => "text-align:right; width:65px; margin-right:20px;", :class => 'control-label'}=t("users.email")
          .controls
            = text_field_tag :email
      %p 
        %i= t("pages.front_page.city_modal.footer")
    .modal-footer
      %button.btn.primary=t("submit")
      %button.btn{:onclick => "$('#city_modal').modal('hide'); return false;"}
        = t("cancel")