.start
  .row
    .span8
      .hub
        %h1
          =t(:search_place_stay_in)
          = link_to "Singapore", "#", :id => "open-country-select"
        %ul#country-select.dropdown
          %li.arrow
          %li Singapore
          %li= link_to t(:not_going_to_singapore), "#", "data-controls-modal" => "my-modal"

        #my-modal.hide.modal.fade
          = form_tag '/cities/suggest', :html => {:remote => true}, :style => "margin-bottom:0" do
            .modal-header
              %h3=t(:cant_find_city)
            .modal-body
              =t(:working_on_expanding)
              <br><br>
              .input
                %label{:style => "text-align:right; width:65px; margin-right:20px;"}=t(:city)
                = text_field_tag 'city', ''
              .input
                %label{:style => "text-align:right; width:65px; margin-right:20px;"}=t(:email)
                = text_field_tag 'email', ''
              <br>
              %i=t(:leave_us_email)
              <br>
            .modal-footer
              %button.btn.primary=t(:submit)
              %button.btn{:onclick => "$('#my-modal').modal('hide'); return false;"}=t(:cancel)

        %form{:action => '/places'}
          .clearfix
            = text_field_tag "date_start", "", :placeholder => "Arriving on", :class => 'textbox big from-to-picker', "data-date" => :from
            = button_to t(:homepage_search_but), search_index_path, :class => "btn hp-blue large"

        #fp-liner{:style => 'color:#3977b0'}
          %p 
            %b= t(:fp_one)
          %p 
            %span= t(:fp_two_a)
            %b= t(:fp_two_b)
          %p
            %b= t(:fp_three)
            
        / .nav
        /   #toggle-preferences.dropdown{"data-dropdown" => "dropdown"}
        /     %a.dropdown-toggle{:href => "#"} $ USD
        /     %ul.dropdown-menu
        /       %li
        /         %a{:href => "#"} Secondary link
        /       %li
