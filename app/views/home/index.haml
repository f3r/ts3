.start
  .row
    .span6
      .hub
        %h1
          =t(:search_place_stay_in)
          - current_city = Heypal::City.find_by_id(get_current_city)
          = link_to current_city.name, "/#{current_city.code}", :id => "open-country-select"
        %ul#country-select.dropdown
          %li.arrow
          - Heypal::City.all_active.each do |city|
            %li= link_to city.name, "/#{city.code}"
          %li= link_to t(:not_going_to_singapore), "#city_modal", "data-toggle" => "modal"

        %p
          %a{:class => 'btn btn-large btn-primary', :style => 'margin-left:63px; margin-top:10px; margin-bottom:55px; width:168px; height:23px; text-align:center; padding-top:12px; float:center; font-weight: bold', :href => "/#{current_city.code}"}= t(:homepage_search_but)

        #fp-liner{:style => 'color:#3977b0'}
          %p 
            %b= t(:fp_one)
          %p 
            %span= t(:fp_two_a)
            %b= t(:fp_two_b)
          %p
            %b= t(:fp_three)
    
    .span6
      #teaser-pics
        - teaser_images = Heypal::FrontpageImage.all_visible
        - teaser_images.each do |image| 
          %a.thumbnail{:href => "#{image.link}"}
            .description= "#{image.label}"
            %img{:src => "#{image.image_url}"}
      
.tease-social
  %hr{:class => "style-two"}
  .links
    %img{:src => "https://s3.amazonaws.com/squarestays-static/icon.fb.jpg", :width => "30px", :height => "30px"}
    %span.social-text
      %a{:href => "https://www.facebook.com/squarestays"}= t(:homepage_facebook)
    %img{:src => "https://s3.amazonaws.com/squarestays-static/icon.tw.jpg", :width => "30px", :height => "30px"}
    %span.social-text
      %a{:href => "https://twitter.com/#!/Squarestays"}= t(:homepage_twitter)
    %img{:src => "https://s3.amazonaws.com/squarestays-static/icon.rss.png", :width => "25px", :height => "25px"}
    %span.social-text
      %a{:href => "http://blog.squarestays.com"}= t(:homepage_blog)
  %hr{:class => "style-two"}
  
.tease-blurb  
  .tease-header
    t(:teaser_center_title)
  .row
    %img{:src => "http://s3.amazonaws.com/squarestays-static/flx.jpg",  :alt => t(:teaser_1_content)}
    %img{:src => "http://s3.amazonaws.com/squarestays-static/qlty.jpg", :alt => t(:teaser_2_content)}
    %img{:src => "http://s3.amazonaws.com/squarestays-static/afrd.jpg", :alt => t(:teaser_3_content)}            

.trust
