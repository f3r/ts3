    %img{:src => "http://s3.amazonaws.com/squarestays-static/nrf.jpg",  :title => "National Research Foundation"}
    %img{:src => "http://s3.amazonaws.com/squarestays-static/prnx.jpg", :title => "PropNex"}
    %img{:src => "http://s3.amazonaws.com/squarestays-static/feo.jpg",  :title => "Far East Organization"}
    
#city_modal.hide.modal.fade
  = form_tag '/cities/suggest', :class => 'cities_suggest_form form-horizontal' do
    .modal-header
      %h3=t(:cant_find_city)
    .modal-body
      =t(:working_on_expanding)
      <br><br>
      .control-group
        %label{:style => "text-align:right; width:65px; margin-right:20px;", :class => 'control-label'}=t(:city)
        .controls
          = text_field_tag 'city', ''
      - unless logged_in?
        .control-group
          %label{:style => "text-align:right; width:65px; margin-right:20px;", :class => 'control-label'}=t(:email)
          .controls
            = text_field_tag 'email'
      <br>
      %i=t(:leave_us_email)
      <br>
    .modal-footer
      %button.btn.primary=t(:submit)
      %button.btn{:onclick => "$('#city_modal').modal('hide'); return false;"}=t(:cancel)

