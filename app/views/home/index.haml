.start
  .row
    .span6
      .hub
        %h1
          =t("pages.front_page.search_place_stay_in")
          = link_to current_city.name, "/#{current_city.slug}", :id => "open-country-select"
        %ul#country-select.dropdown
          %li.arrow
          - City.active.each do |city|
            %li= link_to city.name, "/#{city.slug}"
          %li= link_to t("pages.front_page.other_cities"), "#city_modal", "data-toggle" => "modal"

        %p
          %a{:class => 'btn btn-large btn-primary', :style => 'margin-left:63px; margin-top:10px; margin-bottom:55px; width:168px; height:23px; text-align:center; padding-top:12px; float:center; font-weight: bold', :href => "/#{current_city.slug}"}= t("pages.front_page.search_button")

        #fp-liner{:style => 'color:#3977b0'}
          %p 
            %b= t("pages.front_page.description.one")
          %p 
            %span= t("pages.front_page.description.two")
            %b= t("pages.front_page.description.three")
          %p
            %b= t("pages.front_page.description.four")
    
    .span6
      = gallery :homepage
      
- home_page_footer = Page.find_by_page_url('home_page_footer')
= home_page_footer.description.html_safe unless home_page_footer.nil?
    
= render :partial => "city_modal"
