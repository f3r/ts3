          %aside.span4
            %section
              %h2= t(:item_history)


            %section
              %h2= t(:your_other_items)
              .item-others
                %ul.media-grid
                  - 8.times do 
                    %li
                      = link_to placehold(60, 60), '#'
              .clearfix.sup
              = link_to raw(t(:see_all)), '#', :class => 'sup'
