!!!
%html{:lang => "en"}
  %head
    %meta{:charset => "utf-8"}/
    %title Heypal.com
    %meta{:content => "", :name => "description"}/
    %meta{:content => "", :name => "author"}/
    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    / Le styles
    %link{:rel => "stylesheet/less", :href => "/stylesheets/bootstrap.less"}
    %script{:src => '/javascripts/less-1.1.3.min.js', :type => 'text/javascript'}   

    %script{:src => 'http://use.typekit.com/joo8csw.js', :type => 'text/javascript'}      
    :javascript
      try{Typekit.load();}catch(e){}
      
    :css
      body {
        padding: 5px 0 10px;
      }
      /* Override some defaults */
      .container > footer p {
        text-align: center; /* center align it with the container */
      }

      .header .pull-right {
        float: right;
      }

      /* The white background content wrapper */
      .content {
        background-color: #fff;
        padding: 20px 0;
      }

      /* Give a quick and non-cross-browser friendly divider */
      .content .span4 {
        margin-left: 5px;
        padding-left: 14px;
        border-left: 1px solid #eee;
      }

  %body
    %header.header
      .container
        .row
          .span5
            = link_to placehold(300, 60), root_path, :title => t(:app_name)
          .span5.offset6.user_box
            .row
              .span3
                .user_name
                  = link_to 'Some User', '#'
                  .small
                    = link_to t(:sign_out), '#'
              .span2
                = placehold(60,60)
    .topbar
      .fill
        .container
          %ul.nav
            %li.active
              = link_to t(:find_items), '#'
            %li
              = link_to t(:my_heypal), '#'
            %li
              = link_to t(:profile), '#'
          %ul.nav.secondary-nav
            %li
              = link_to t(:add_an_item), '#'
            %li
              = link_to "5", '#', :class => 'dropdown-toggle'
              %ul.dropdown-menu
                %li
                  = link_to 'Notification 1', '#'
                %li
                  = link_to 'Notification 2', '#'
    .container
      .content
        .row
          %section.span12
            .announce
              %h2 Page Identifier

            %section.page-text
              %h2 Page Text
              %p
