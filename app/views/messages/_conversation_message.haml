.span15
  %span.float-left
    %a{:href => "/users/#{m['from']['id']}"} 
      - unless m['from']['avatar'].nil?
        %img{:src => m['from']['avatar'], :style => "width:60px", :alt => 'user_avatar'}
      - else
        = placehold(60,60)

  .span12
    %div{:class => "alert-message info"}
      %b= m['from']['first_name'][0] + ". " + m['from']['last_name']
      %br
      = simple_format h(m['message'])

    %div.float-right{:style => "margin-top: -20px; margin-bottom:15px"}
      %span.created_at
        %i 
          %span.time= time_ago_in_words(Time.parse(m['date']))
      
