.row.message
  .span1.from
    %a{:href => "/users/#{m['from']['id']}"} 
      = avatar_image(m['from'])
      = message_from(m['from'])
  .span11
    .body{:class => m['system'] ? 'system' : ''}
      -if m['body'] == "transaction_confirmed_rental"
        .row
          .span6
            = t(:user_confirmed_rental_message)
          .span4
            =# render 'transaction_actions'
      -else
        = simple_format h(m['body'])
    %span.time.pull-right= "#{time_ago_in_words(Time.parse(m['date']))} ago"