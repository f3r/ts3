- if m['system']
  .row.system-message
    .span12
      .well
        =# image_tag('SquareStays_square_75x75.png')
        = system_message_body(m['system_msg_id'])
      %span.time.pull-right= t("time_ago", :time => time_ago_in_words(Time.parse(m['date'])))
- else
  .row.message
    .span1.from
      = avatar_image(m['from'])
      = message_from(m['from'])
    .span11
      .body
        = simple_format h(m['body'])
      %span.time.pull-right= t("time_ago", :time => time_ago_in_words(Time.parse(m['date'])))