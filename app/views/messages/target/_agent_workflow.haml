- if inquiry['state']  == 'initial'
  %p= t(:awaiting_request_agent)

- elsif inquiry['state']  == 'requested'
  = link_to t(:preapprove_rental), transaction_path(inquiry['id'], :event => :pre_approve), {:method => :put, :remote => true, :class => "btn btn-primary btn-large respond-btn" }

- else
  %p= t(:awaiting_payment_guest)