- case inquiry['state'].to_sym
  - when :initial
    .span5.offset1
      %p.hint= t(:workflow_initial_agent)

  - when :requested
    .span1.or
      or
    .span5
      = link_to t(:workflow_requested_agent_button), transaction_path(inquiry['id'], :event => :pre_approve), {:method => :put, :remote => true, :class => "btn btn-primary btn-large" }
      %p.hint= "(#{t(:workflow_requested_agent)})"

  - when :ready_to_pay
    .span5.offset1
      %p= t(:workflow_readypay_agent)

  - else
    .span5.offset1
      %p.hint= t(:workflow_paid_agent)