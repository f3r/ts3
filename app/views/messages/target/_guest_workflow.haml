- if inquiry['state']  == 'bigbang'
  = link_to t(:confirm_rental), request_rental_transaction_path(inquiry['id']), {:method => :post, :remote => true, :id => "confirm_rental", :class => "btn btn-primary btn-large respond-btn" }
- elsif inquiry['state'] == 'requested'
  %p= t(:confirmed_rental_guest)
  %p= t(:confirmed_rental_guest2)
- else
  %p= 'Please proceed to pay the fee'
  = render 'messages/target/payment_button', :inquiry => inquiry
