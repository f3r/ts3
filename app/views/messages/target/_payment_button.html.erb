<% payment_service_for inquiry['id'], PAYPAL_ACCOUNT, :amount => 300, :currency => 'SGD', :service => :paypal do |service|
  service.customer :first_name => current_user.first_name,
      :last_name => current_user.last_name,
      :email => current_user.email

  service.item_name 'SquareStays Rental Fee'

  # PayPal will POST a callback here when the payment is done
  service.notify_url payment_notification_url(inquiry)
  # PayPal will take your user here with a POST after he pays
  service.return_url root_url
  # PayPal will redirect your user here if he cancels the payment
  service.cancel_return_url root_url %>

  <%= submit_tag 'Fee Payment', :class => 'btn btn-primary btn-large' %>
<% end %>
