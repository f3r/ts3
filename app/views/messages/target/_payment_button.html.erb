<% payment_service_for inquiry['code'], PAYPAL_ACCOUNT, :amount => 300, :currency => 'SGD', :service => :paypal, :html => { :id => 'payment_form' } do |service|
  service.customer :first_name => current_user.first_name,
      :last_name => current_user.last_name,
      :email => current_user.email

  service.item_name t(:payment_fee_desc, :title => inquiry['place_title'])

  service.customer :first_name => current_user['first_name'],
                   :last_name => current_user['last_name']

  service.invoice inquiry['code']

  # PayPal will POST a callback here when the payment is done
  service.notify_url paypal_callback_url
  # PayPal will take your user here with a POST after he pays
  service.return_url root_url

  # PayPal will redirect your user here if he cancels the payment
  service.cancel_return_url root_url %>

  <%= link_to_function t("workflow.readypay_guest_button"), "$('#payment_form').submit()", {:class => "btn btn-primary btn-large" } %>
<% end %>
