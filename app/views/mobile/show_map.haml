- content_for(:title)  { "#{@resource.title}"}
- content_for(:footer) { "map" }
- content_for(:id)     { "#{@resource.id}" }
- require_google_apis

%div#map{:style => 'height: 450px; width: 320px; margin: -30px -15px 0px -15px'}

:javascript
  $(function(){
    PlaceShow.initializeMap(
      #{@resource.lat || 'null'},
      #{@resource.lon || 'null'},
      '#{@resource.city.name}',
      '#{@resource.city.country}',
      #{@resource.radius || 0},
      "map");
  });