#inquire_place.modal.hide.fade
  = form_tag(confirm_inquiry_place_path, {:method => :post, :remote => true, :id => "inquire_form"}) do
    .modal-header
      %a{:href => '#', :class => 'close', 'data-dismiss' => 'modal'}x
      %h3 Tell us about your stay

    .modal-body
      .form-horizontal
        - unless logged_in?
          .control-group
            %label{:class => 'control-label'} Name
            .controls
              = text_field_tag :name, nil, :placeholder => 'e.g. John Smith', :class => 'validate[required]'
          .control-group
            %label{:class => 'control-label'} Email
            .controls
              = text_field_tag :email, nil, :placeholder => 'e.g. mail@mail.com', :class => 'validate[required]'

        .control-group
          %label{:class => 'control-label'} Arriving
          .controls
            = text_field_tag "date_start", nil, :placeholder => "Click to select date", :class => 'textbox medium from-to-picker', "data-date" => :from
        .control-group
          %label{:class => 'control-label'} Staying
          .controls
            = select_tag :length_stay, '<option selected="selected">1</option><option>2</option><option>3</option><option>4</option><option>5</option><option>6</option><option>7</option><option>8</option><option>9</option><option>More</option>'.html_safe, :class => 'small'
            = select_tag :length_stay_type, '<option value="weeks">week(s)</option><option selected="selected" value="months">month(s)</option>'.html_safe, :class => 'small'

        .control-group
          %label{:class => 'control-label'} Comments / Questions          
          .controls
            = text_area_tag :questions, nil, :rows => 5, :placeholder => 'Please tell us if you have any further questions. Questions can be for this property or for any properties listed by this agent', :class => 'span5'
    .clearfix
    .modal-footer
      .inquiry-actions
        %button.btn.btn-large.btn-primary{'data-loading-text' => "Submitting...", 'id' => 'inquire_button', 'autocomplete' => 'off'}=t(:inquire)
      %div.inquiry-sent-msg.btn.btn-large.btn-primary.disabled= "Inquiry sent"