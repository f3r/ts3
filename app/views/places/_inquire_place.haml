#inquire_place.modal.hide.fade
  = form_tag(confirm_inquiry_place_path, {:method => :post, :remote => true, :id => "inquire_form"}) do
    .modal-header
      %a{:href => '#', :class => 'close', 'data-dismiss' => 'modal'}x
      %h3= t("inquiries.inquiry_modal_title")

    .modal-body
      .form-horizontal
        - unless logged_in?
          .control-group
            %label{:class => 'control-label'}= t("users.full_name")
            .controls
              = text_field_tag :name, nil, :placeholder => t("users.name_example"), :class => 'validate[required]'
          .control-group
            %label{:class => 'control-label'}= t("users.email")
            .controls
              = text_field_tag :email, nil, :placeholder => t("users.email_example"), :class => 'validate[required]'

        .control-group
          %label{:class => 'control-label'}= t("inquiries.arriving")
          .controls
            = text_field_tag "date_start_label", nil, :placeholder => t("date_select"), :class => 'validate[required] textbox medium datepicker'
            = hidden_field_tag "date_start", nil
        .control-group
          %label{:class => 'control-label'}= t("inquiries.staying")
          .controls
            = select_tag :length_stay, options_for_select([1,2,3,4,5,6,7,8,9,'more']), :class => 'small'
            = select_tag :length_stay_type, lenght_stay_type_options, :class => 'small'

        .control-group
          %label{:class => 'control-label'}= t("inquiries.comments_questions")
          .controls
            = text_area_tag :questions, nil, :rows => 5, :placeholder => t("inquiries.inquiry_questions"), :class => 'span5'
        - unless logged_in?
          .control-group
            %label{:class => 'control-label'}= t("inquiries.re_captcha")
            .controls
              = recaptcha_tags :theme => 'validate[required]' 
            .recaptcha_error
    .clearfix
    .modal-footer
      .inquiry-actions
        %button.btn.btn-large.btn-primary{'data-loading-text' => t("submitting"), 'id' => 'inquire_button', 'autocomplete' => 'off'}=t("inquiries.button_inquire")
      %div.inquiry-sent-msg.btn.btn-large.btn-primary.disabled= t("inquiries.inquiry_sent")