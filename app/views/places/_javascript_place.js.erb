$('#search_result_list').append("<%= escape_javascript(render 'results_list_view', :places => @results['places'])%>");
$('#search_result_grid').append("<%= escape_javascript(render 'results_grid_view', :places => @results['places'])%>");

if ($("#disp-gallery").hasClass('current')) {
  $(".show-grid").show();
  $(".list-display").hide();
} else {
  $(".list-display").show();
  $(".show-grid").hide();
}

$('#place_result_pages .current_page').html("<%= escape_javascript(@results['current_page']) %>");
$('#place_result_pages .page_num').html("<%= escape_javascript(params[:page]) %>");
