- if @place.published
  = button_to t("places.unpublish"), unpublish_place_path(:id => @place.to_param), :method => :put, :class => 'btn primary medium preview-button unpublish'
- else
  = button_to t("places.publish"), publish_place_path(:id => @place.to_param), :method => :put, :class => 'btn primary medium preview-button unpublish'

%a.btn.medium.edit{:title => t("places.edit"), :href => "#{wizard_place_path(@place)}"}
  = t("places.edit")
