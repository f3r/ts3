- places.each do |place|
  .items-gallery.results
    .span6
      .box
        .clearfix
          .feat
            .thumb
              %a{:href => "#"}
                = image_tag(place['photos'].empty? ? "http://placehold.it/216x144" : place['photos'][0]['photo']['medium'])
          .side    
            .thumb
              %a{:href => "#"}
                = image_tag((!place['photos'].empty? && place['photos'][1] ? place['photos'][1]['photo']['small'] : "http://placehold.it/106x70"))
            .thumb
              %a{:href => "#"}
                = image_tag((!place['photos'].empty? && place['photos'][2] ? place['photos'][2]['photo']['small'] : "http://placehold.it/106x70"))
        .desc.clearfix
          %h3.title
            = link_to place['title'], place_path(place['id'])
          .clearfix
            .property.data-block
              .title
                .type.apartment 
                  = place['place_type']['name']
              .micro
                = place['size_sqf']
                &sup2; 

            .price.data-block
              .title.figure= "$#{place['price_per_night']}"
              .micro Per night
