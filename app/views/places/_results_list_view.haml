- places.each do |place|
  %li
    .thumb.data-block
      = image_tag(place['photos'].empty? ? "http://placehold.it/150x90" : place['photos'][0]['photo']['small'])
    .info  
      %h3.title
        = link_to place['title'], place_path(place['id'])
      .people.data-block
        .profile-pic
          = image_tag(place['user']['avatar'].nil? ? "http://placehold.it/40x40" : place['user']['avatar'])
        .details
          .name
            = link_to "#{place['user']['first_name']} #{place['user']['last_name']}", '#', :class => 'title'
            .micro
              .type.verified Agent

      .property.data-block
        .title
          .type.apartment 
            = place['place_type']['name'] 
        .micro
          = place['size_sqf']
          &sup2;  

    .price.data-block
      .figure= "$#{place['price_per_night']}"
      .micro Per night
