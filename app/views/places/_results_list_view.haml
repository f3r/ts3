- if places
  - places.each do |place|
    %li
      .thumb.data-block
        = image_tag(place['photos'].empty? ? "http://placehold.it/150x100" : place['photos'][0]['photo']['medsmall'])
      .info  
        %h3.title
          = link_to place['title'], place_path(place['id'])
        / .people.data-block
        /   .profile-pic
        /     = image_tag(place['user']['avatar'].nil? ? "http://placehold.it/40x40" : place['user']['avatar'], :style => "width:40px; height:40px")
        /   .details
        /     .name
        /       = link_to "#{place['user']['first_name'][0]}. #{place['user']['last_name']}", user_path(place['user']['id']), :class => 'title'
        /       .micro
        /         .type.verified=t(:agent)

        .property.data-block
          .title
            .type.house 
              = I18n.t(place['place_type']['name'].parameterize('_'))
            .type.size
              - if "ft<sup>2</sup>".casecmp(get_pref_size_unit) == 0
                = raw("#{number_with_precision place['size_sqf'], :strip_insignificant_zeros => true, :precision => 1} ")
                =t(:square_feet_short)
              -else
                = raw("#{number_with_precision place['size_sqm'], :strip_insignificant_zeros => true, :precision => 1} ") 
                =t(:square_meters_short)

        .property2.data-block
          .title
            - if !place['num_bedrooms'].nil?
              .type.bedroom
                = place['num_bedrooms']
                = t(:bedroom)
            - if !place['num_bathrooms'].nil?
              .type.bathroom
                = place['num_bathrooms']
                = t(:bathroom)

      .price.data-block
        -if @results['total_days']
          -if @results['total_days'] < 7
            .figure= "#{get_pref_currency}#{place['price_per_night']}"
            .micro= t(:per_night)
          -if @results['total_days'] >= 7 && @results['total_days'] <= 28
            .figure= "#{get_pref_currency}#{place['price_per_week']}"
            .micro= t(:per_week)      
          -if @results['total_days'] > 28
            .figure= "#{get_pref_currency}#{place['price_per_month']}"
            .micro= t(:per_month)
        -else
          -if !place['price_per_month'].blank?
            .figure= "#{get_pref_currency}#{place['price_per_month']}"
            .micro= t(:per_month)
          -elsif !place['price_per_week'].blank?
            .figure= "#{get_pref_currency}#{place['price_per_week']}"
            .micro= t(:per_week)
          -elsif !place['price_per_night'].blank?
            .figure= "#{get_pref_currency}#{place['price_per_night']}"
            .micro= t(:per_night)

- else
  %li
    .thumb.data-block
      =t(:sorry_no_matches)
