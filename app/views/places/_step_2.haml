.panel-wrapper
  %h2.title Description
  %fieldset

    .input
      = f.label :title, 'Title'
      = f.text_field :title, :class => "span8", :class => "validate[required] autosave"
    .input
      = f.label :place_type_id, 'Type'
      = f.select :place_type_id, [["Apartment", 1], ["House", 2], ["Villa", 3], ["Room", 4], ["Shared Room", 5], ["Dorm", 6], ["Other space", 7]], {}, :class => 'validate[required] autosave'

    .input
      = f.label :description
      = f.text_area :description, :class => "validate[required] span8 autosave", :rows => 5
    .input
      = f.label :max_guests, 'Number of Guests'
      = f.text_field :max_guests, :class => "validate[required,custom[integer]] span1 autosave"
    .input
      = f.label :num_bedrooms, 'Number of Bedrooms'
      = f.text_field :num_bedrooms, :class => "validate[required,custom[integer]] span1 autosave"
    .input
      = f.label :num_beds, 'Number of Beds'
      = f.text_field :num_beds, :class => "validate[required,custom[integer]] span1 autosave"
    .input
      = f.label :num_bathrooms, 'Number of Bathrooms'
      = f.text_field :num_bathrooms, :class => "validate[required,custom[integer]] span1 autosave"

    .input
      = f.label :sqm
      = f.text_field :sqm, :class => "validate[required,custom[integer]] span2 autosave"
      = f.select :size_type, ["sqm", "sqf"], {}, :class => "validate[required] span2 autosave"
  %h2.title Address
  %fieldset

    .input
      = f.label :city_id, 'City'
      = f.select :city_id, [['Singapore', '1'], ['Hong Kong', '13984'], ['Kuala Lumpur', '4065']], :class => "validate[required] span6 autosave"      
    - if false
      .input
        = f.label :city
        = @city['name']

      .input
        = f.label :state
        = @city['state']['name']

      .input
        = f.label :country
        = @city['country']['name']

    .input
      = f.label :address_1
      = f.text_field :address_1, :class => "validate[required] span5 autosave"
      %span.help-inline
        Street Address, Company 
    .input
      = f.label :address_2
      = f.text_field :address_2, :class => "span5 autosave"
      %span.help-inline
        Apartment / Unit Number / Suite
    .input
      = f.label :zip
      = f.text_field :zip, :class => "validate[required] span3 autosave"
    .input
      = f.label :directions
      = f.text_area :directions, :class => "validate[required] span8 autosave", :rows => 5       

.arrows.clearfix
  .coda-nav-right
    %a.btn.primary{:href => "#"} Next Step &raquo;


