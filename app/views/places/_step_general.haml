.panel-wrapper
  %fieldset.well.form-horizontal
    %h3= t(:description)
    .control-group.required
      = f.label :title, t(:title), :class => 'control-label'
      .controls
        = f.text_field :title, :class => "input-xlarge validate[required] autosave"
    .control-group.required
      = f.label :place_type_id, t(:type), :class => 'control-label'
      .controls
        = f.select :place_type_id, place_types_select, {}, :class => 'validate[required] autosave'

    .control-group
      = f.label :description, t(:description), :class => 'control-label'
      .controls
        = f.text_area :description, :class => "span8 autosave", :rows => 5, :style => "width: 440px;"
    .control-group.required
      = f.label :max_guests, t(:max_guests), :class => 'control-label'
      .controls      
        = f.text_field :max_guests, :class => "validate[required,custom[integer],min[0]] span1 autosave"
    .control-group
      = f.label :num_bedrooms, t(:num_bedrooms), :class => 'control-label'
      .controls      
        = f.text_field :num_bedrooms, :class => "validate[custom[integer],min[0]] span1 autosave"
    .control-group
      = f.label :num_beds, t(:num_beds), :class => 'control-label'
      .controls
        = f.text_field :num_beds, :class => "validate[custom[integer],min[0]] span1 autosave"
    .control-group
      = f.label :num_bathrooms, t(:num_bathrooms), :class => 'control-label'
      .controls
        = f.text_field :num_bathrooms, :class => "validate[custom[integer],min[0]] span1 autosave"

    .control-group.required
      = f.label :place_size, t(:size), :class => 'control-label'
      .controls
        = f.text_field :place_size, :class => "validate[required,custom[integer],min[0]] span2 autosave"
        = f.text_field :size_sqm, :class => 'autosave_place_unit', :style => 'display:none'
        = f.text_field :size_sqf, :class => 'autosave_place_unit', :style => 'display:none'
      
        = f.select :size_unit, [[t(:square_meters_short), "meters"], [t(:square_feet_short), "feet"]], {}, :class => "validate[required] span2 autosave_place_unit"
  %fieldset.well.form-horizontal
    %h3= t(:address)
    .control-group.required
      = f.label :city_id, t(:city), :class => 'control-label'
      .controls
        = f.select :city_id, cities_options, {}, { :class => "validate[required] autosave input-xlarge"}
    - if false
      .control-group
        = f.label :city, t(:city), :class => 'control-label'
        .controls
          = @city['name']

      .control-group
        = f.label :state, t(:state), :class => 'control-label'
        .controls
          = @city['state']['name']

      .control-group
        = f.label :country, t(:country), :class => 'control-label'
        .controls
          = @city['country']['name']

    .control-group.required
      = f.label :address_1, t(:address_1), :class => 'control-label'
      .controls
        = f.text_field :address_1, :class => "input-xlarge validate[required] autosave"
        %p.help-block
          = t(:address_1_help)
    .control-group
      = f.label :address_2, t(:address_2), :class => 'control-label'
      .controls
        = f.text_field :address_2, :class => "input-xlarge autosave"
        %p.help-block
          = t(:address_2_help)
    .control-group.required#zip_input
      = f.label :zip, t(:zip_code), :class => 'control-label'
      .controls
        = f.text_field :zip, :class => "input-xlarge validate[required] span3 autosave"
    .control-group
      = f.label :directions, t(:directions), :class => 'control-label'
      .controls
        = f.text_area :directions, :class => "span6 autosave", :rows => 5

.arrows.clearfix
  .float-right
    %a.btn.primary{:href => "javascript:switchToPanel('#2')"}=raw t(:next_step)

