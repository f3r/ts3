<% if @result['stat'] == "ok" %>
  $(".place_<%= @place_id %> .button_favorite button").attr('disabled', 'disabled').addClass("btn-success").attr('data-original-title', '<%= t(:remove_favorite) %>');;
  $(".place_<%= @place_id %> .button_favorite button i").removeClass("icon-star-empty icon-black").addClass("icon-star icon-white");;
  $(".place_<%= @place_id %> .button_favorite form").attr('action', '<%= remove_favorite_place_path(:id => @place_id) %>');
  $(".place_<%= @place_id %> .button_favorite button").removeAttr('disabled');
<% end %>