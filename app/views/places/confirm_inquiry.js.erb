<% if @recaptcha_error%>
Recaptcha.reload()
$('#inquire_place').modal('show');
$("#inquire_button").button('reset')
$('#inquire_place').trigger('shown');
$('.recaptcha_error').html("Invalid Text");
<%else%>
        $('.alert-message').remove();
        $('#inquire_place').modal('hide');
        <% if @success %>
          $('#inquire_place').addClass('sent');
          <%= open_modal :inquiry_sent, 'inquiries/sent' %>
        <% else %>
          $("#inquire_button").button('reset');
          <%= open_modal :inquiry_not_sent, 'inquiries/not_sent' %>
          $('.place_info').before('<div class="alert alert-error" data-alert="alert"><a href="#" class="close" data-dismiss="alert">Ã—</a><%= t("inquiries.inquiry_error") %></div>');
        <% end %>
<%end%>