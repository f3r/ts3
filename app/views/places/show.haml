                %li
                  %a{:rel => "2", :class => "pagenum", :href => "#"}
                    = image_tag("http://placehold.it/40x40")
                %li
                  %a{:rel => "3", :class => "pagenum", :href => "#"}
                    = image_tag("http://placehold.it/40x40")
                %li
                  %a{:rel => "4", :class => "pagenum", :href => "#"}
                    = image_tag("http://placehold.it/40x40")
                %li
                  %a{:rel => "5", :class => "pagenum", :href => "#"}
                    = image_tag("http://placehold.it/40x40")
                %li
                  %a{:rel => "6", :class => "pagenum", :href => "#"}
                    = image_tag("http://placehold.it/40x40")
                %li
