.row
  .span12
    %div{:style => "float:right"}
      %a.btn.primary.large.preview-button{:href => preview_place_path(@place)}
        %span
          Publish

    .preview-header
      %br
      %p This is a Preview
      .border.span11      
    .accomodation-wrapper
      .header
        .title 
          %h1= @place.title
          .meta
            %p 
              Manila, Philippines 
            
            .share
              %span.label Share via
              %a.fb{:href => "#"} Facebook
              %a.tw{:href => "#"} Twitter
              %a.gplus{:href => "#"} Google Plus
            
        .focal
          %h1.price
            = number_to_currency @place.price_per_night 
            %span.sub  Per Night 
          %a.btn.large.primary Rent it!  
          
          
      %ul.tabs
        %li.active  
          %a{:href => "#"} Photos  
        %li
          %a{:href => "#"} Map
        %li 
          %a{:href => "#"} Calendar
          
