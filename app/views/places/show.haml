        #photo-slider-control    
          %a#stopslider{:href => "#"} Stop
          %a#startslider{:href => "#"} Play    


      .description
        .row
          .span8
            %p= @place.description
          .span4
            .highlight
              %h5 Sample Highlight
              %p Excepteur sint occaecat cupidatat non proident, sunt in culpa qui officia deserunt mollit anim id est laborum.    
             
      
      .tabbed-panel.other-info  
        %ul.tabs
          %li.active  
            %a{:href => "#"} Details  
          %li
            %a{:href => "#"} Amenities
        .contents    
          .fine-print
            .row
              .span4.col
                %label Type
                .value= @place.place_type
                .label Size
                .value= @place.sqm
              .span4.col
                %label Bedrooms          
                .value= @place.num_bedrooms
                %label Bed          
                .value= @place.num_beds
                %label Guests
                .value
                  1 - 
                  = @place.max_guests

              .span4.col
                %label Price per Night
                .value= number_to_currency @place.price_per_night 
                %label Price per Week
                .value= number_to_currency @place.price_per_week
                %label Price per Month
                .value= number_to_currency @place.price_per_month 

  .span4
    .wizard-aside
      %ul#wizard-selector
        %li.tab1
          %a{:href => "#{wizard_place_path(@place)}#1"}
