%br.clearfix
%section.item-comments
  %h2.section-header Questions 
  - @product['questions'].each do |question|
    .comment.clearfix{:class => cycle('right', '')}
      .body
        = question['message']
      .created_at
        = question['timestamp']
      .commenter
        .user_box
          .user_photo= placehold(40,40)
          .user_data
            .user_name= link_to question['user']['name'], '#'
            .user_rank
              = placehold(24,24)
              = question['user']['reviews']
              = placehold(24,24)
              = question['user']['badges']
  
  = form_for :questions do |f|
    .row
      .span8.offset2
        = f.text_area :body, :class => 'span8 xxlarge', :rows => 4, :placehold => "Write a message to Anna"
        .clearfix
        .float-right
          = f.submit 'Submit', :class => 'btn primary'      
      .span2
        = placehold(80, 80)


