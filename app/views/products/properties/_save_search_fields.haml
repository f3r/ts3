.control-group
  %label{:class => "control-label"}= t("places.guests")
  .controls
    = select_tag "alert[query[guests]]", options_for_select(max_guest_options, alert_params['query']['guests'])
.control-group
  %label{:class => "control-label"}= t("places.search.dates")
  .controls
    = text_field_tag "alert[query[check_in]]", alert_params['query']['check_in'], :placeholder => t("places.search.arriving_on"), :class => 'span2 check-in-picker', "data-date" => :from, 'autocomplete' => 'off'
    = text_field_tag "alert[query[check_out]]", alert_params['query']['check_out'], :placeholder => t("places.search.departing_on"), :class => 'span2 check-out-picker', "data-date" => :to, 'autocomplete' => 'off'
    

:javascript
  // Initialize the date pickers
  $('.check-in-picker, .check-out-picker').datepicker('destroy').datepicker({
    dateFormat: 'yy-mm-dd',
    minDate: +1,
    onSelect: function(selectedDate) {
      var me = $(this);
      var who = me.attr("data-date");
      var instance = me.data("datepicker");

      var date = $.datepicker.parseDate(
            instance.settings.dateFormat ||
            $.datepicker._defaults.dateFormat,
            selectedDate, instance.settings);

      if (who == 'from') {
        from = me.next();
        from.datepicker("option", "minDate", date);
      } else {
        to = me.prev();
        to.datepicker("option", "maxDate", date);
      }
    }
  });