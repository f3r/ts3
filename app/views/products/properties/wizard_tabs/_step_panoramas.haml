#panorama_modal.modal.hide.fade
  .modal-header
    %a{:href => '#', :class => 'close', 'data-dismiss' => 'modal'}x
    %h3 Upload panorama files
  .modal-body
    %p Loading...

.panel-wrapper
  .actions
    = link_to 'Upload Panorama', new_listing_panorama_path(@resource), :remote => true, :data => {:toggle => 'modal', :target => '#panorama_modal'}, :class => 'btn btn-large'
  .well
    = render 'panoramas/list', :product => @product, :actions => true
  .arrows.clearfix
    .float-left
      %a.btn.primary{:href => "javascript:switchToPanel('#1')"}=raw t("places.wizard.previous_step")
    .float-right
      %a.btn.primary{:href => "javascript:switchToPanel('#3')"}=raw t("places.wizard.next_step")