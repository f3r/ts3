.wizard-aside-wrapper
  .wizard-aside
    %ul.nav.nav-tabs.nav-stacked#wizard_tabs
      %li.active
        .indicator#generalInfo
          = image_tag('check-disabled.png')
        %a{:href => "#1", :title => t("places.wizard.general_information_title")}
          = t("places.wizard.general_information_title")
      %li
        .indicator#photoInfo
          = image_tag('check-disabled.png')
        %a{:href => "#2", :title => t("services.wizard.work_profile_title")}
          = t("services.wizard.work_profile_title")
  - if false
    .actions
      - unless @resource.published
        %a.btn.primary.large.preview-button{:href => '#', :id => "preview_button", :onclick => "goToPreview(#{@resource.id})"}
          %span
            = t("preview")
      - else
        %a.btn.btn-info.btn-large.preview-button{:href => '#', :id => "preview_button", :onclick => "goToPlace(#{@resource.id})"}
          %span
            = t("places.wizard.back_to_property")