#main-tab.tab-pane.active
  .row
    .span3.profile_pic
      = image_tag @resource.primary_photo, :width => '200'
    .span8
      .row-fluid
        .span12
          %h2= @resource.user.anonymized_name
          .row-fluid
            - @resource.amenities.all.each do |a|
              .span2
                %h4= a.name
      =# render 'products/custom_values'
      .row-fluid
        .span12
          = image_tag 'social/facebook.png'
          = image_tag 'social/twitter.png'
          = image_tag 'social/myspace.png'
          = image_tag 'social/soundcloud.png'
          = image_tag 'social/youtube.png'
          = image_tag 'social/rss.png'

      .row-fluid.about
        .span12
          %h3="#{t("services.about_me")}:"
          %p= resource.description