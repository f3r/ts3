#main-tab.tab-pane.active
  .row
    .span3.profile_pic
      = image_tag @resource.primary_photo, :width => '200'

    .span8
      .row-fluid
        .span12
          %h2= @resource.user.anonymized_name
      .row-fluid
        .span6
          .row-fluid
            .span4
              .details_label= t("services.age")
            .span8
              .details_value= @resource.user.age || '-'
          .row-fluid
            .span4
              .details_label= t("services.speaks")
            .span8
              .details_value
                English, French
          .row-fluid
            .span4
              .details_label= t("services.looking_for")
            .span8
              .details_value= @resource.seeking_label || '-'
        .span6
          .row-fluid
            .span8
              .details_label= t("services.educational_status")
            .span4
              .details_value= @resource.education_status_label || '-'
          .row-fluid
            .span8
              .details_label= t("services.last_educational_institute")
            .span4
              .details_value= @resource.last_institute || '-'
      .row-fluid.about
        .span12
          %h3="#{t("services.about_me")}:"
          %p= resource.description