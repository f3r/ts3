#inquire_place.modal.hide.fade
  = form_for(:inquiry, :url => inquiries_path(:place_id => @resource.id), :html => {:method => :post, :remote => true, :id => "inquire_form"}) do |f|
    .modal-header
      %a{:href => '#', :class => 'close', 'data-dismiss' => 'modal'}x
      %h3= t("inquiries.inquiry_modal_title")

    .modal-body
      .form-horizontal
        - unless logged_in?
          .control-group
            = f.label :name, t("users.full_name"), {:class => 'control-label'}
            .controls
              = text_field_tag :name, nil, :placeholder => t("users.name_example"), :class => 'validate[required]'
          .control-group
            = f.label :email, t("users.email"), {:class => 'control-label'}
            .controls
              = text_field_tag :email, nil, :placeholder => t("users.email_example"), :class => 'validate[required]'

        .control-group
          = f.label :date_start_label, t("inquiries.arriving"), {:class => 'control-label'}
          .controls
            = text_field_tag "date_start_label", nil, :placeholder => t("date_select"), :class => 'validate[required] textbox medium datepicker', :id => 'inquiry_date_start_label'
            = f.hidden_field :date_start
        .control-group
          = f.label :length_stay, t("inquiries.staying"), {:class => 'control-label'}
          .controls
            = f.select :length_stay, options_for_select([1,2,3,4,5,6,7,8,9,'more']), :class => 'small'
            = f.select :length_stay_type, lenght_stay_type_options, :class => 'small'

        .control-group
          = f.label :message, t("inquiries.comments_questions"), {:class => 'control-label'}
          .controls
            = f.text_area :message, :rows => 5, :placeholder => t("inquiries.inquiry_questions"), :class => 'span5'
        - if false && !logged_in?
          .control-group
            %label{:class => 'control-label'}= t("inquiries.re_captcha")
            .controls
              = recaptcha_tags :theme => 'validate[required]'
            .recaptcha_error
    .clearfix
    .modal-footer
      .inquiry-actions
        %button.btn.btn-large.btn-primary{'data-loading-text' => t("submitting"), 'id' => 'inquire_button', 'autocomplete' => 'off'}=t("inquiries.button_inquire")
      %div.inquiry-sent-msg.btn.btn-large.btn-primary.disabled= t("inquiries.inquiry_sent")