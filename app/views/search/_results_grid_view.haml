%ul
  - places.each do |place|
    %li.items-gallery.results{:class => "place_#{place.id}"}
      .box
        .clearfix
          =  link_to seo_place_path(place) do
            .feat
              .thumb{:style => "background-color:#3e3e3e"}= image_tag(place.photos.blank? ? "http://placehold.it/216x144" : place.photos[0].photo.url(:medium))
            .side    
              .thumb{:style => "background-color:#3e3e3e"}= image_tag((!place.photos.blank? && place.photos[1] ? place.photos[1].photo.url(:small) : "http://placehold.it/106x70"))
              .thumb{:style => "background-color:#3e3e3e"}= image_tag((!place.photos.blank? && place.photos[2] ? place.photos[2].photo.url(:small) : "http://placehold.it/106x70"))
        .desc.clearfix
          %h3.title
            = render 'button_favorite', :favorable => place
            = link_to place.title, seo_place_path(place), :title => place.title
          .clearfix
            .property.data-block
              .title
                .type.house
                  = place.place_type.translated_name
                .type.size
                  = place_size(place)

            .property2.data-block
              .title
                - unless place.num_bedrooms.blank?
                  .type.bedroom
                    = t("places.bedrooms_count", :count => place.num_bedrooms)
                - unless place.num_bathrooms.blank?
                  .type.bathroom
                    = t("places.bathrooms_count", :count => place.num_bathrooms)
            .price.data-block
              - if place.price_per_month.present?
                .figure= place_price(place)
                .micro= t("places.per_month")
