.registration.row-fluid
  %br
  .section.span6.bored
    %h2.offset-one-eight= t(:login)

    = form_tag sessions_path do 
      .input
        = text_field_tag :email, '',  :placeholder => 'E-Mail Address'
      .input
        = password_field_tag :password, '', :placeholder => 'Password'
      %button.btn.float-right{:type => 'submit'}
        Login

    %br.clearfix
    = link_to t(:forgot_password), reset_password_users_path
    %br
    = link_to t(:resend_confirmation), confirm_users_path
  .section.span5
    %h2= t(:login_using)
    %a{:href => "/auth/facebook"}
      = image_tag 'signin_facebook.png', :style => 'margin-top: 10px', :alt => 'Sign in with Facebook'
    %br
    %a{:href => "/auth/twitter"}
      = image_tag 'sign-in-with-twitter-l.png', :alt => 'Sign in with twitter'
    %br
    %br
    %br
    %p
      This will allow you to log in to SquareStays
      %br
      using your existing accounts!      
  %br.clearfix
  %br
