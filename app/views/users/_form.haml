.section.span6.bored
  %h2.offset-one-eight= t(:create_new_account)
  %br 
  = form_for :user, :url => users_path, :html => {:id => 'registerForm'} do |f|
    .input
      = f.text_field :first_name, :placeholder => 'First Name'
    .input
      = f.text_field :last_name, :placeholder => 'Last Name'
    .input
      = f.text_field :email, :placeholder => 'E-Mail Address'
    .input
      = f.password_field :password, :placeholder => 'Confirm'
    .input
      = f.password_field :password_confirmation, :placeholder => 'Confirm Password'
    .input
      %label.reset-width
        = f.check_box :terms, :id => 'terms_and_conditions'
        %label.for-checkbox{:for => "terms_and_conditions"}
          I accept the
          = link_to 'terms and conditions', '/terms-and-conditions', :target => :blank
    %button.btn.float-right{:type => 'submit primary'}
      Create account

.section.span5
  %h2.bottom-large= t(:create_an_account_using)
  %a{:href => "/auth/facebook"}
    %img.bottom{:src => '/images/signin_facebook.png', :alt => 'Sign in with Facebook'}
  %br
  %a{:href => "/auth/twitter"}
    %img{:src => '/images/sign-in-with-twitter-l.png', :alt => 'Sign in with twitter'}
  %p.bottom-part
    This will allow you to log in to SquareStays
    %br
    using your existing accounts!
%br.clearfix
%br
