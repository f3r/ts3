.section.span6.bored
  %h2.offset-one-eight= t(:create_new_account)
  %br 
  = form_for :user, :url => users_path, :html => {:id => 'registerForm'} do |f|
    = f.hidden_field :oauth_provider
    = f.hidden_field :oauth_token
    = f.hidden_field :oauth_uid
    = f.hidden_field :avatar_url
    
    .input= f.text_field     :first_name, :placeholder => 'First Name',     :class => "validate[required]"
    .input= f.text_field     :last_name,  :placeholder => 'Last Name',      :class => "validate[required]"
    .input= f.text_field     :email,      :placeholder => 'E-Mail Address', :class => "validate[required,custom[email]]"
    .input= f.password_field :password,   :placeholder => 'Confirm',        :class => "validate[required,custom[onlyLetterNumber]]"
    .input= f.password_field :password_confirmation, :placeholder => 'Confirm Password', :class => "validate[required, equals[user_password]]"
    
    .input.agree
      %div.reset-width
        = f.check_box :terms, :id => 'terms_and_conditions'
        %label.for-checkbox{:for => "terms_and_conditions"}
          I accept the
          = link_to t(:terms_and_conditions), terms_path, :target => :blank
    %button.btn.float-right{:type => 'submit'}
      Create account

  .switch-login
    = t(:switch_to_login)
    = link_to 'here', login_path
  
:javascript
  $(document).ready(function(){
    $("#registerForm").validationEngine('attach');
  });