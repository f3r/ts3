.section.span6.bored
  %h2.offset-one-eight= t(:create_new_account)
  %br 
  = form_for :user, :url => users_path, :html => {:id => 'registerForm'} do |f|
    = f.hidden_field :oauth_provider
    = f.hidden_field :oauth_token
    = f.hidden_field :oauth_uid
    = f.hidden_field :avatar_url
    .input
      = f.text_field :first_name, :placeholder => 'First Name'
    .input
      = f.text_field :last_name, :placeholder => 'Last Name'
    .input
      = f.text_field :email, :placeholder => 'E-Mail Address'
    .input
      = f.password_field :password, :placeholder => 'Confirm'
    .input
      = f.password_field :password_confirmation, :placeholder => 'Confirm Password'
    .input.agree
      %div.reset-width
        = f.check_box :terms, :id => 'terms_and_conditions'
        %label.for-checkbox{:for => "terms_and_conditions"}
          I accept the
          = link_to t(:terms_and_conditions), terms_path, :target => :blank
    %button.btn.float-right{:type => 'submit'}
      Create account