- unless @user_auth['authentications'].blank?
  - for auth in @user_auth['authentications']
    .span3
      .user_box
        .user_photo.float-left
          %img{:src => "/images/icons/#{auth['provider']}.png", :style => "width:30px; height:30px; padding-right:5px;"}
        .user_data
          .user_name
            = link_to "#{full_name @user}", "#"
            = "(#{auth['provider']})"
    .clearfix
    .span8
      +link accounts:
      - if @user_auth['authentications'].size == 1
        - if auth['provider'] == "twitter"
          .p{:style => "padding-left: 10px;"}
            = link_to image_tag("/images/icons/facebook.png"), "/auth/facebook"
        - elsif auth['provider'] == "facebook"
          .p{:style => "padding-left: 10px;"}
            = link_to image_tag("/images/icons/twitter.png"), "/auth/twitter"
- else
  +link accounts:
  %p
    = link_to image_tag("/images/icons/facebook.png"), "/auth/facebook"
    = link_to image_tag("/images/icons/twitter.png"), "/auth/twitter"
