- unless coded_errors_for(@user).blank?
  %div{:class => 'alert-message error'}
    = coded_errors_for @user
.registration
  %br
  .section.span6.bored
    %h2= t(:create_new_account)

    = form_for :user, :url => users_path, :html => {:id => 'registerForm'} do |f|
      .input
        = f.text_field :first_name, :placeholder => 'First Name'
      .input
        = f.text_field :last_name, :placeholder => 'Last Name'
      .input
        = f.text_field :email, :placeholder => 'E-Mail Address'
      .input
        = f.password_field :password, :placeholder => 'Confirm'
      .input
        = f.password_field :password_confirmation, :placeholder => 'Confirm Password'
      .input
        %label.reset-width
          = f.check_box :terms, :id => 'terms_and_conditions'
          %label.for-checkbox{:for => "terms_and_conditions"}
            I accept the
            = link_to 'terms and conditions', '/terms-and-conditions', :target => :blank
      %button.btn.float-right{:type => 'submit primary'}
        Create account

  .section.span5
    %h2= t(:create_an_account_using)
    %a{:href => "/auth/facebook"}
      %img{:src => '/images/signin_facebook.png'}      
    %br
    %a{:href => "/auth/twitter"}
      %img{:src => '/images/sign-in-with-twitter-l.png'}
    %br
    %br
    %br
    %br
    %p
      This will allow you to log in to SquareStays
      %br
      using your existing accounts!
  %br.clearfix
  %br
